{
  "name": "utils",
  "version": "0.0.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "svelte": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "main": "src/index.ts",
  "module": "src/index.ts",
  "scripts": {
    "build": "vite build",
    "check": "tsc --noEmit -p ./tsconfig.json",
    "check:watch": "tsc --noEmit -p ./tsconfig.json --watch",
    "clean": "rm -rf node_modules .turbo dist",
    "dev": "vite build --watch",
    "lint": "eslint . --max-warnings 0",
    "test": "vitest run",
    "test:ui": "vitest --ui"
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@vitest/ui": "^2.1.8",
    "eslint-config": "*",
    "jsdom": "^25.0.1",
    "turbo-utils": "*",
    "typescript-config": "*",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.6",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "svelte": "^5.16.0"
  }
}
