{
  "name": "web",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "clean": "rm -rf node_modules .svelte-kit .turbo build test-results",
    "dev": "vite dev",
    "lint": "eslint . --max-warnings 0",
    "prepare": "svelte-kit sync",
    "preview": "vite preview",
    "test": "concurrently 'npm run test:unit' 'npm run test:e2e'  --names 'unit,e2e'",
    "test:ci": "concurrently 'npm run test:unit:ci' 'npm run test:e2e' --names 'unit,e2e'",
    "test:e2e": "playwright test",
    "test:unit": "vitest run",
    "test:unit:ci": "vitest",
    "test:unit:ui": "vitest --ui"
  },
  "dependencies": {
    "@internationalized/date": "^3.8.2",
    "assets": "*",
    "bits-ui": "^2.8.7",
    "locale": "*",
    "nodemailer": "^7.0.3",
    "svelte-email-tailwind": "^3.0.1",
    "tailwind-variants": "^1.0.0",
    "typesafe-i18n": "^5.26.2",
    "ui": "*",
    "utils": "*",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.0",
    "@playwright/test": "^1.53.1",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/enhanced-img": "^0.6.0",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@tailwindcss/vite": "^4.1.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@types/nodemailer": "^6.4.17",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.29.0",
    "jsdom": "^26.1.0",
    "svelte": "^5.34.7",
    "svelte-check": "^4.2.2",
    "tailwind-config": "*",
    "tailwindcss": "^4.1.10",
    "turbo-utils": "*",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
